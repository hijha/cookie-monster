{
  "name": "cookie-monster",
  "version": "0.1",
  "description": "Cleans up your cookies",
  "background": {
    "page": "background.html",
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_title": "Cookie Monster",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",
  "manifest_version": 2
}