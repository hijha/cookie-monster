{
  "name": "cookie-monster",
  "version": "0.1",
  "description": "Cleans up your cookies",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Cookie Monster",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}